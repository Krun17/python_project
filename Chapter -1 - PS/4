import os

def print_directory_contents(path='/New folder'):
    try:
        # Get the list of files and directories in the specified path
        contents = os.listdir(path)
        
        print(f"Contents of the directory '{path}':")
        for item in contents:
            print(item)
    except FileNotFoundError:
        print(f"The directory '{path}' does not exist.")
    except PermissionError:
        print(f"Permission denied to access the directory '{path}'.")

# Call the function with the desired path
print_directory_contents('/path/to/directory')
